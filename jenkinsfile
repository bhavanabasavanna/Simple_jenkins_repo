pipeline {
    agent any

    stages {
        stage('Install pytest') {
            steps {
                sh 'pip install pytest'
            }
        }
        stage('Run Test') {
            steps {
                echo 'Testing...'
                sh 'pytest test_calc.py'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'echo Build complete'
            }
        }
    }
}